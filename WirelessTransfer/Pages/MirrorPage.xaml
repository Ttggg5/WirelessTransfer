<Page x:Class="WirelessTransfer.Pages.MirrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WirelessTransfer.Pages"
      xmlns:custombuttons="clr-namespace:WirelessTransfer.CustomButtons" xmlns:customcontrols="clr-namespace:WirelessTransfer.CustomControls"
      xmlns:mp="http://schemas.mpcoding.com/mpcoding/wpf/loadinganimation"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="540"
      Title="MirrorPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <customcontrols:DeviceFinder x:Name="deviceFinder"
                                         Function="Mirror"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            
            <Label Grid.Row="0"
                   FontSize="25"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom">
                <Grid>
                    <TextBlock Text="掃描QR Code"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="以直接連接"
                               HorizontalAlignment="Center"
                               Margin="0, 35, 0, 0"/>
                </Grid>
            </Label>

            <Image Grid.Row="1"
                   Source="/Assets/down_arrow.png"
                   Margin="0, 10, 0, 0"/>

            <Border Grid.Row="2"
                    Width="140" Height="140"
                    CornerRadius="10"
                    Background="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Image x:Name="qrCodeImg"
                       Margin="5"/>
            </Border>
        </Grid>

        <Border Grid.ColumnSpan="2"
                x:Name="maskBorder"
                Background="#CC000000"
                CornerRadius="10">
            <Grid>
                <StackPanel x:Name="waitRespondSp"
                            VerticalAlignment="Center">
                    <mp:WaveAnimation Width="100" Height="100"
                                      Color="{StaticResource MainColorBrush}"
                                      Duration="0:0:2.0" />
                    <TextBlock Text="等待對方確認"
                               HorizontalAlignment="Center"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"/>
                </StackPanel>

                <Grid x:Name="connectedGrid">
                    <Border Background="{StaticResource MainColor2Brush}"
                            CornerRadius="10">
                        <Grid>
                            <TextBlock Text="螢幕分享中..."
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       Margin="10"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"/>

                            <Grid Width="288" Height="162"
                                  HorizontalAlignment="Left"
                                  Margin="50, 0, 0, 0">
                                <Image Source="/Assets/screen_icon.png" />
                            </Grid>

                            <StackPanel HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Margin="0, 0, 100, 0">
                                <TextBlock Text="螢幕解析度:"
                                           Foreground="White"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="0, 5"/>

                                <RadioButton GroupName="screenResolution"
                                             x:Name="defaultResolutionRB"
                                             Content="1080p"
                                             Foreground="White"
                                             FontSize="14"
                                             Margin="0, 5"
                                             Checked="RadioButton_Checked"/>
                                
                                <RadioButton GroupName="screenResolution"
                                             Content="720p"
                                             Foreground="White"
                                             FontSize="14"
                                             Margin="0, 5"
                                             Checked="RadioButton_Checked"/>
                                
                                <RadioButton GroupName="screenResolution"
                                             Content="480p"
                                             Foreground="White"
                                             FontSize="14"
                                             Margin="0, 5"
                                             Checked="RadioButton_Checked"/>
                                
                                <RadioButton GroupName="screenResolution"
                                             Content="360p"
                                             Foreground="White"
                                             FontSize="14"
                                             Margin="0, 5"
                                             Checked="RadioButton_Checked"/>
                            </StackPanel>

                            <Button x:Name="disconnectBtn"
                                    Height="30"
                                    Margin="10"
                                    VerticalAlignment="Bottom"
                                    Click="disconnectBtn_Click">
                                <Button.Resources>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Name="border"
                                                            Background="IndianRed"
                                                            CornerRadius="8">
                                                        <Border.Effect>
                                                            <DropShadowEffect Opacity="0.5"
                                                                                BlurRadius="20"
                                                                                ShadowDepth="3"/>
                                                        </Border.Effect>

                                                        <Grid VerticalAlignment="Center"
                                                                Margin="5">
                                                            <TextBlock Text="中斷"
                                                                        FontSize="16"
                                                                        Foreground="White"
                                                                        VerticalAlignment="Center"
                                                                        HorizontalAlignment="Center"
                                                                        Margin="0, 0, 0, 0"/>
                                                        </Grid>
                                                    </Border>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" TargetName="border" Value="#FFE88A8A"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" TargetName="border" Value="#FFA94646"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Background" TargetName="border" Value="gray"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
